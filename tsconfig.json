{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__tests__/*"
  ]
}
